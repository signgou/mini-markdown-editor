{
  "name": "@mini-markdown/editor",
  "version": "0.0.0",
  "type": "module",
  "description": "mini-markdown-editor",
  "keywords": [
    "markdown",
    "editor",
    "markdown-editor",
    "react",
    "react-markdown-editor"
  ],
  "main": "./dist/mini-markdown-editor.umd.cjs",
  "module": "./dist/mini-markdown-editor.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/mini-markdown-editor.js",
      "require": "./dist/mini-markdown-editor.umd.cjs"
    }
  },
  "scripts": {
    "build:ast": "pnpm -F @mini-markdown/ast-parser build",
    "dev": "pnpm build:ast && vite",
    "build": "pnpm build:ast && tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@emoji-mart/data": "^1.2.1",
    "@emoji-mart/react": "^1.1.1",
    "ahooks": "^3.8.4",
    "antd": "^5.23.2",
    "emoji-mart": "^5.6.0",
    "highlight.js": "^11.11.1",
    "html2pdf.js": "^0.10.2",
    "nanoid": "^5.0.9",
    "react-hotkeys-hook": "^4.6.1",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@codemirror/commands": "^6.8.0",
    "@codemirror/lang-markdown": "^6.3.2",
    "@codemirror/language-data": "^6.5.1",
    "@eslint/js": "^9.17.0",
    "@mini-markdown/ast-parser": "workspace:^1.0.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@uiw/codemirror-extensions-events": "^4.23.7",
    "@uiw/react-codemirror": "^4.23.7",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "3.0.5",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "jsdom": "^26.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "styled-components": "^6.1.14",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.0.5",
    "vite-plugin-dts": "^4.5.0",
    "vitest": "^3.0.5"
  },
  "peerDependencies": {
    "@codemirror/commands": "^6.8.0",
    "@codemirror/lang-markdown": "^6.3.2",
    "@codemirror/language-data": "^6.5.1",
    "@uiw/codemirror-extensions-events": "^4.23.7",
    "@uiw/react-codemirror": "^4.23.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}